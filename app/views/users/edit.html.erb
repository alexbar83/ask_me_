<div class="container">
	<h2 class="title">"edit"</h2>
	<% if @user.errors.any? %> 
	<div class="mt">
	<% @user.errors.full_messages.each do |message| %> 
	<p class="mb sm text-red"><%= message %></p>
	<% end %> 
</div>
	<% end %>

	<div class="mt"> 
		<%= form_with model: @user, local: true do |form| %>
		<p><%= form.label :name, 'Your name' %></p>
		<p><%= form.text_field :name, class: "form-text-field" %></p> 

		<p class="mt"><%= form.label :nickname, 'Your nickname?' %></p>
		<p><%= form.text_field :nickname, class: "form-text-field" %></p> 

		<p class="mt"><%= form.label :email, "Your email?" %></p>
		<p><%= form.text_field :email, class: "form-text-field" %></p>   

		<p class="mt"><%= form.label :password_digest, "Your password?" %></p>
		<p><%= form.password_field :password_digest, class: "form-text-field" %></p>  


		<p class="mt"><%= form.label :password_confirmation, "Your password?" %></p>
		<p><%= form.password_field :password_confirmation, class: "form-text-field" %></p> 

		<p class="mt-lg"><%= form.submit "Registration" , class: "button button-main" %></p>
		<span class="text-sm">ili<%= link_to "Back", :back %></span>
		<% end %> 
	</div>
	<div class="mt-mg">
		<%= button_to "Udalit profil", user_path(@user),
		method: :delete, 
		form: {data: {turbo_confirm: "wy tochno hotte udalit?"}}, 
		class: "text-red text-sm" %>

	</div>
 </div>
