<%= form_with model: resource , local: true do |form| %>  
<p>
  <%= form.label :body, "Text question" %>
</p>
<p class="mt">
  <%= form.text_area :body, rows: 5 ,class: "form-text-area"%>
</p>

<p>
  <%= form.label :user_id %>
</p>
<p>
  <%= form.text_field :user_id, class: "form-text-field" %>
</p>
<p class="mt">
  <%= form.submit "Create",  class: 'button button-main' %>
</p>
<% end %>  
